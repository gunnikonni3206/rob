/*    Author:       VEX                                                       */
/*    Created:      Wed Sep 25 2019                                           */
/*    Description:  Moving Backwards (mm)                                     */
/*                                                                            */
/*    This program drives the robot in reverse for 150 millimeters.           */
/*                                                                            */
/*----------------------------------------------------------------------------*/

// ---- START VEXCODE CONFIGURED DEVICES ----
// Robot Configuration:
// [Name]               [Type]        [Port(s)]
// Drivetrain           drivetrain    1, 10, D
// ---- END VEXCODE CONFIGURED DEVICES ----

#include "vex.h"

using namespace vex;

int main() {
  // Initializing Robot Configuration. DO NOT REMOVE!
  vexcodeInit();
  int tala=0;
  int i=0;
  int full=40;
  int down=25;
  while (i<5){
    i+=1;
    tala+=500;
    Drivetrain.setDriveVelocity(down, percent);
    Drivetrain.driveFor(forward, 150, mm);
    Drivetrain.setDriveVelocity(full, percent);
    Drivetrain.driveFor(forward, tala-300, mm);
    Drivetrain.setDriveVelocity(down, percent);
    Drivetrain.driveFor(forward, 150, mm);
    wait(0.5,seconds);
    Drivetrain.driveFor(reverse, 150, mm);
    Drivetrain.setDriveVelocity(full, percent);
    Drivetrain.driveFor(reverse, tala-300, mm);
    Drivetrain.setDriveVelocity(down, percent);
    Drivetrain.driveFor(reverse, 150, mm);
  }
}
